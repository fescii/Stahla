# Stahla AI SDR API - Environment Variables
# Copy this file to .env and edit the values for your environment

# API Information
PROJECT_NAME="Stahla AI SDR"
API_V1_STR="/api/v1"
# Base URL for constructing webhook URLs, needed for Bland callbacks etc.
APP_BASE_URL="http://localhost:8000"

# HubSpot Configuration
HUBSPOT_API_KEY="YOUR_HUBSPOT_API_KEY_HERE"

# Bland.ai Configuration
BLAND_API_KEY="YOUR_BLAND_AI_KEY_HERE"
BLAND_API_URL="https://api.bland.ai"
# Optional: Set a default Bland Voice ID
BLAND_DEFAULT_VOICE_ID=

# Logfire Configuration
LOGFIRE_TOKEN="YOUR_LOGFIRE_TOKEN_HERE"
# LOGFIRE_IGNORE_NO_CONFIG=1  # Uncomment to suppress warnings

# LLM Configuration
# Choose your LLM provider (openai, anthropic, gemini, marvin, none)
LLM_PROVIDER="marvin"

# API Keys for different LLM providers - populate based on your LLM_PROVIDER choice
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""
MARVIN_API_KEY=""

# N8N / Orchestration Configuration (Optional)
N8N_ENABLED=false
N8N_WEBHOOK_URL_CLASSIFICATION_DONE=""

# Email Configuration (Optional - for sending auto-replies)
EMAIL_SENDING_ENABLED=false
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM_ADDRESS=""

# Classification Logic Settings
LOCAL_DISTANCE_THRESHOLD_MILES=50
